<div class="random-card d-flex flex-row justify-content-around align-items-start">
  <div>
    <img class="beerImg" src="{{this.image_url}}" alt="Image for Each Beer">
  </div>
  <div class="d-flex flex-column justify-content-around" id='card-body'>
    <h1 id="card-title">{{this.name}}</h1>
    <p id="grey-text">{{this.tagline}}</p>
    <p class="card-text">{{this.description}}</p>
    <h5 id='head'>Food Pairing</h5>
    <p>{{this.food_pairing}}</p>
    <p id="card-text">Brewers Tips: {{this.brewers_tips}}</p>
  </div>
</div>